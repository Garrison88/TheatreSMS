<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        tools:context="com.garrisonthomas.theatresms.SettingsActivity"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <TextView
            android:padding="50dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/app_description_settings"
            android:id="@+id/description_text_settings"
            android:textSize="20sp"
            android:textColor="#9cff00"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activation_switch"
            android:layout_below="@+id/toggle_description_settings"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toggle_description_settings"
            android:id="@+id/toggle_description_settings"
            android:padding="10dp"
            android:textColor="#00FFFF"
            android:layout_below="@+id/description_text_settings"
            android:layout_alignLeft="@+id/description_text_settings"
            android:layout_alignStart="@+id/description_text_settings" />

    </RelativeLayout>
